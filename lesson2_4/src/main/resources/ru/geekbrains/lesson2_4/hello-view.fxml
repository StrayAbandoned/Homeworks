<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.geekbrains.lesson2_4.HelloController" stylesheets="/style.css">


    <Label fx:id="chatRoom" alignment="CENTER" text="CHATROOM" textAlignment="CENTER" AnchorPane.topAnchor="0"
           AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0"/>


    <TextArea fx:id="textArea" AnchorPane.topAnchor="30.0" AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5"
              AnchorPane.bottomAnchor="45"/>
    <TextField fx:id="textField" AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="65" AnchorPane.leftAnchor="5"
               onAction="#sendText"/>
    <Button fx:id="btn" onAction="#sendText" text="SEND" AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="5"/>
</AnchorPane>
