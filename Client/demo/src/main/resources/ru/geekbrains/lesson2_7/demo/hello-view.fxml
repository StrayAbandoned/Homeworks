<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ListView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ru.geekbrains.lesson2_7.demo.HelloController">

    <HBox fx:id="loginbox" visible="true" managed="true">
        <TextField fx:id="login" promptText="login" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="10.0" left="10.0" right="10.0"/>
            </HBox.margin>
        </TextField>
        <PasswordField fx:id="password" onAction="#login" promptText="password" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets top="10.0" right="10.0"/>
            </HBox.margin>
        </PasswordField>
        <HBox minWidth="145">
            <Button fx:id="btnlog" onAction="#login" text="Login" >
                <HBox.margin>
                    <Insets top="10.0" right="10.0"/>
                </HBox.margin>
            </Button>

            <Button fx:id="btnreg" onAction="#registration" text="Registration">
                <HBox.margin>
                    <Insets top="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>


    </HBox>


    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" editable="false" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </TextArea>
        <ListView fx:id="clientList" managed="false" visible="false" minWidth="100" onMouseReleased="#clickUser">
            <HBox.margin>
                <Insets bottom="10.0" left="-10" right="10.0" top="10.0"/>
            </HBox.margin>
        </ListView>
    </HBox>

    <HBox fx:id="msgpanel" visible="false" managed="false">
        <TextField fx:id="textField" onAction="#sendText" promptText="Type a message" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="btn" onAction="#sendText" text="Send">
            <HBox.margin>
                <Insets bottom="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
