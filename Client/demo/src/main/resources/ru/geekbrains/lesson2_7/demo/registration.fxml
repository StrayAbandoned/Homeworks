<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<VBox  alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.geekbrains.lesson2_7.demo.RegController">

    <TextField fx:id="login" promptText="login" HBox.hgrow = "ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="password" promptText="password" HBox.hgrow = "ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </PasswordField>
    <TextField fx:id="nick" promptText="nickname" HBox.hgrow = "ALWAYS" >
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </TextField>
    <Button fx:id="reg" onAction="#registration" text="Registration" >
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </Button>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0" bottom="10"/>
        </VBox.margin>
    </TextArea>


</VBox>
